<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.letsgo.controller.dialogs.SuccessDialog">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="3"
        >

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dialog_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="You bought: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dialog_ticket_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="33"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dialog_plural_for_ticktes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ticket\s"
            android:layout_row="0"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="for:"
            android:layout_row="1"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/dialog_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event name"
            android:gravity="center"
            android:layout_row="2"
            android:layout_columnSpan="3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_row="3"
            android:layout_columnSpan="3"
            android:text="OK" />

    </GridLayout>
</LinearLayout>
