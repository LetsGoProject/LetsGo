<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_background_border"
    android:padding="7dp"
    tools:context=".controller.fragments.FragmentSearchResults">


    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/search_criteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SEARCH RESULTS"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_search"
        android:layout_below="@+id/search_criteria"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/new_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/refine_search"
        android:layout_centerHorizontal="true"
        android:text="new search" />

    <Button
        android:id="@+id/refine_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Refine search" />


</RelativeLayout>
